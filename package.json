{
  "name": "wikidok-archive",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "ts-node": "ts-node-esm -T",
    "crawl:prod": "node dist/main.js",
    "crawl:dev": "yarn ts-node src/main.ts",
    "generate-mw-dump": "yarn ts-node src/generate-mw-dump.ts",
    "test": "jest"
  },
  "main": "dist/main.ts",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "args": "^5.0.3",
    "crawlee": "^3.1.4",
    "html-entities": "^2.3.3",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@apify/tsconfig": "^0.1.0",
    "@tsconfig/node18": "^1.0.1",
    "@types/args": "^5.0.0",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.2.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "maxWorkers": 1
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
