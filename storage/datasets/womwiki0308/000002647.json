&#xc11c; &#xb0a8;&#xc131;&#xc758; &#xc601;&#xc5ed;&#xc774;&#xc5c8;&#xb2e4;. &#xadc0;&#xc2a4;&#xd0c0;&#xbe0c; &#xbaa8;&#xb85c;, &#xd3f4; &#xace0;&#xac31;, &#xc5d0;&#xb4dc;&#xbc14;&#xb974;&#xb4dc; &#xbb49;&#xd06c; &#xb4f1; &#xb300;&#xd45c;&#xc801;&#xc778; &#xb0a8;&#xc131; &#xd654;&#xac00;&#xb4e4;&#xc758; &#xadf8;&#xb9bc;&#xc5d0;&#xc11c; &#xc778;&#xac04;&#xc758; &#xace0;&#xb1cc;&#xb294; &#xc624;&#xc9c1; &#xb0a8;&#xc131;&#xc758; &#xace0;&#xb1cc;, &#xc694;&#xcee8;&#xb300; &#xc5ec;&#xc131; &#xbb39;&#xb97c; &#xc758;&#xbbf8;&#xd558;&#xb294; &#xac83;&#xc73c;&#xb85c; &#xacb0;&#xc815;&#xb418;&#xc5b4; &#xc788;&#xc5c8;&#xb2e4;. &#xc989; &#xb0a8;&#xc131;&#xc774; &#xc5ec;&#xc131;&#xc744; &#xc5b4;&#xb5bb;&#xac8c; &#xc0dd;&#xac01;&#xd558;&#xace0; &#xc788;&#xb294;&#xc9c0;&#xac00; &#xd68c;&#xd654;&#xc758; &#xc8fc;&#xc694; &#xd14c;&#xb9c8;&#xac00; &#xb418;&#xc5c8;&#xb2e4;.<sup id=\"cite_ref-.EB.85.B8.EB.A7.88.EB.B6.80.EB.A5.B4.EB.93.9C01_1-1\" class=\"reference\">[1]</sup></p><p>&#xc0c1;&#xc9d5;&#xc8fc;&#xc758;&#xb294; &#xc5b5;&#xc81c;&#xb41c; &#xc0c9;&#xcc44;, &#xb098;&#xb978;&#xd55c; &#xb9ac;&#xb4ec;, &#xb0b4;&#xc131;&#xc801;&#xc778; &#xc608;&#xc220;&#xac00; &#xd0c0;&#xc785;&#xc73c;&#xb85c; &#xc778;&#xc2dd;&#xb418;&#xace0;&#xb294; &#xd588;&#xb2e4;. &#xc0c1;&#xc9d5;&#xc8fc;&#xc758; &#xc608;&#xc220;&#xac00;&#xb4e4;&#xc740; &#xbcf4;&#xd1b5; &#xc2e4;&#xc7ac;&#xd558;&#xb294; &#xc5ec;&#xc131;&#xc758; &#xbaa8;&#xc2b5;&#xc774; &#xc544;&#xb2cc;, &#xd558;&#xb098; &#xd639;&#xc740; &#xb450; &#xac1c;&#xc758; &#xbcf4;&#xd3b8;&#xc801;&#xc778; &#xc5ec;&#xc131;&#xc758; &#xd0c0;&#xc785;&#xc744; &#xbb18;&#xc0ac;&#xd588;&#xb2e4;. &#xc0c1;&#xc9d5;&#xc8fc;&#xc758;&#xc5d0;&#xc11c; &#xc5ec;&#xc131;&#xc740; &#x2018;&#xce58;&#xba85;&#xc801;&#xc778;&#x2019; &#xc874;&#xc7ac;&#xc600;&#xc73c;&#xba70; &#xb0a8;&#xc131;&#xbcf4;&#xb2e4; &#x2018;&#xc790;&#xc5f0;&#xc5d0; &#xac00;&#xae5d;&#xace0;, &#xbcf8;&#xb2a5;&#xc5d0; &#xb530;&#xb77c; &#xd589;&#xb3d9;&#xd558;&#xace0;, &#xc2e0;&#xbe44;&#xb85c;&#xc6b4;&#x2019; &#xc874;&#xc7ac;&#xc600;&#xb2e4;. &#xc774;&#xbe0c;&#xc640; &#xc0b4;&#xb85c;&#xba54;, &#xc2a4;&#xd551;&#xd06c;&#xc2a4;, &#xc131;&#xbaa8; &#xb9c8;&#xb9ac;&#xc544;&#xac00; &#xc774;&#xb7ec;&#xd55c; &#xc5ed;&#xd560;&#xc744; &#xb2f4;&#xb2f9;&#xd55c;&#xb2e4;.<sup id=\"cite_ref-.EB.85.B8.EB.A7.88.EB.B6.80.EB.A5.B4.EB.93.9C01_1-2\" class=\"reference\">[1]</sup></p><h3><span id=\"20&#xc138;&#xae30;\"></span><span class=\"mw-headline\" id=\"20.EC.84.B8.EA.B8.B0\">20&#xc138;&#xae30;</span></h3><p>1905&#xb144; &#xd3ec;&#xbe0c;&#xc640; &#xbe0c;&#xb93c;&#xcf00;&#xb85c; &#xb300;&#xd45c;&#xb418;&#xb294; &#xb0a8;&#xc131; &#xd654;&#xac00;&#xb4e4;&#xc740; &#xc80a;&#xc74c;&#xacfc; &#xac74;&#xac15;&#xc758; &#xc608;&#xcc2c;&#xc790;&#xc600;&#xb2e4;. &#xadf8;&#xb4e4;&#xc740; &#xd604;&#xb780;&#xd55c; &#xc0c9;&#xcc44;, &#xc0b0;&#xc774;&#xb098; &#xd0dc;&#xc591;&#xc758; &#xbe5b;&#xb0a8;, &#xb098;&#xccb4;&#xc758; &#xc18c;&#xb140; &#xb4f1; &#xc790;&#xc2e0;&#xb4e4;&#xc758; &#xc9c1;&#xc811;&#xc801;&#xc778; &#xccb4;&#xd5d8;&#xc744; &#xadf8;&#xb9ac;&#xace0;&#xc790; &#xd588;&#xb2e4;. &#xc989; &#xc138;&#xc0c1;&#xc758; &#xc0ac;&#xbb3c;&#xc5d0; &#xb300;&#xd55c; &#xbb18;&#xc0ac;&#xbcf4;&#xb2e4;&#xb3c4; &#xc790;&#xc2e0;&#xb4e4;&#xc758; &#xac10;&#xc815;, &#xac10;&#xac01;&#xc744; &#xc804;&#xb2ec;&#xd558;&#xace0;&#xc790; &#xd588;&#xb358; &#xac83;&#xc774;&#xb2e4;. &#xc774;&#xb4e4;&#xc740; &#xc0c1;&#xc9d5;&#xc8fc;&#xc758;&#xc640; &#xac19;&#xc774; &#xb0a8;&#xc131;&#xc774; &#xcc98;&#xd55c; &#xc0c1;&#xd669;&#xc744; &#xd1b5;&#xd574; &lt;&#xc0b6;&gt;&#xc744; &#xd30c;&#xc545;&#xd588;&#xb2e4;. &#xc774;&#xb4e4;&#xc740; &#xd2b9;&#xd788; &#xadfc;&#xb300; &#xbd80;&#xb974;&#xc8fc;&#xc544; &#xc0ac;&#xd68c;&#xc758; &#xad6c;&#xc18d;&#xacfc; &#xb9de;&#xc11c; &#xc2f8;&#xc6b0;&#xb294; &#xc911;&#xc0b0; &#xacc4;&#xae09; &#xb0a8;&#xc131;&#xc758; &#xc785;&#xc7a5;&#xc744; &#xb300;&#xd45c;&#xd558;&#xace0;&#xb294; &#xd588;&#xb2e4;. &#xd06c;&#xace0; &#xc2dc;&#xc6d0;&#xc2a4;&#xb7ec;&#xc6b4; &#xbd93;&#xc9c8;&#xacfc; &#xac15;&#xb82c;&#xd558;&#xace0; &#xc0dd;&#xc0dd;&#xd558;&#xba70; &#xc0b0;&#xb73b;&#xd558;&#xc9c0; &#xbabb;&#xd55c; &#xc0c9;&#xcc44; &#xb4f1;&#xc774; &#xc774;&#xb4e4;&#xc758; &#xd2b9;&#xc9d5;&#xc73c;&#xb85c; &#xaf3d;&#xd78c;&#xb2e4;. &#xc774;&#xb4e4;&#xc740; &#xc131;&#xc801;&#xb7;&#xad00;&#xb2a5;&#xc801; &#xccb4;&#xd5d8;&#xc5d0; &#xb300;&#xd55c; &#xbc18;&#xc751;&#xc744; &#xc790;&#xc720;&#xb85c;&#xc774; &#xc774;&#xc57c;&#xae30;&#xd55c;&#xb2e4;. &#xd654;&#xac00;&#xb294; &#xbaa8;&#xb378;&#xc758; &#xbc14;&#xb85c; &#xc704;&#xc5d0;&#xc11c; &#xc811;&#xadfc;&#xd558;&#xace0;, &#xc5bc;&#xad74;&#xb7;&#xac00;&#xc2b4; &#xadf8;&#xb9ac;&#xace0; &#xadf9;&#xb2e8;&#xc801;&#xc73c;&#xb85c; &#xd654;&#xac00; &#xcabd;&#xc73c;&#xb85c; &#xb4a4;&#xd2bc; &#xd5c8;&#xb9ac;&#xb85c; &#xc8fc;&#xc758;&#xb97c; &#xae30;&#xc6b8;&#xc778;&#xb2e4;. &#xc57c;&#xb2e8;&#xc2a4;&#xb7ec;&#xc6b4; &#xc5bc;&#xad74;&#xc758; &#xc0de;&#xace0;&#xb294; &#xd0dc;&#xace0;&#xc758; &#xbc14;&#xb514;&#xd398;&#xc778;&#xd2b8;&#xc640; &#xadfc;&#xb300;&#xc758; &#xd654;&#xc7a5; &#xc591;&#xcabd;&#xc744; &#xc554;&#xc2dc;&#xd55c;&#xb2e4;. &#xc774;&#xb4e4;&#xc758; &#xc0c9;&#xcc44;&#xb294; &#xc774;&#xad6d;&#xc801;&#xc774;&#xba70; &#xc6d0;&#xc2dc;&#xc801;&#xc774;&#xace0; &#xb3d9;&#xc591;&#xc801;&#xc774;&#xb2e4;.<sup id=\"cite_ref-.EB.85.B8.EB.A7.88.EB.B6.80.EB.A5.B4.EB.93.9C01_1-3\" class=\"reference\">[1]</sup></p><p>&#xc608;&#xcee8;&#xb300;, &#xcf00;&#xc0ac; &#xbc18; &#xb3d9;&#xac90;&#xc758; &lt;&#xb204;&#xc6cc; &#xc788;&#xb294; &#xb204;&#xb4dc;&gt;(1905-06)&#xb294; &#xc5ec;&#xc131;&#xc744; &#xc644;&#xc804;&#xd788; &#xb3d9;&#xbb3c;&#xc801; &#xc721;&#xccb4;&#xb85c; &#xd658;&#xc6d0;&#xc2dc;&#xd0a8;&#xb2e4;. &#xc5bc;&#xad74;&#xc774; &#xc5c6;&#xb294; &#xbab8;&#xc758; &#xc0ac;&#xc9c0;&#xb294; &#xcd95; &#xb298;&#xc5b4;&#xc838; &#xc788;&#xace0;, &#xc190;&#xacfc; &#xbc1c; &#xb05d;&#xc740; &#xbd88;&#xba85;&#xb8cc;&#xd558;&#xc5ec; &#xc798; &#xc54c; &#xc218; &#xc5c6;&#xac8c; &#xb418;&#xc5b4; &#xc788;&#xb2e4;. &#xd654;&#xac00;&#xc758; &#xb208;&#xc740;<span>&#xa0;</span>&#xba54;&#xc77c;&#xac8c;&#xc774;&#xc988;&#xb85c;&#xc11c;, &#xac04;&#xb2e8;&#xd788; &#xb9d0;&#xd574; &#xc131;&#xd589;&#xc704;&#xc640; &#xc5f0;&#xad00; &#xc5c6;&#xb294; &#xac83;&#xc740; &#xbaa8;&#xb450; &#xc5ec;&#xacfc;&#xb2f9;&#xd574; &#xc788;&#xb2e4;. &#xc774;&#xc640; &#xac19;&#xc740; &#xc774;&#xbbf8;&#xc9c0;&#xb294; 1890&#xb144;&#xb300; &#xbb49;&#xd06c;&#xc758; &lt;VAMPYR&gt;&#xc5d0;&#xc11c; &#xbb18;&#xc0ac;&#xb418;&#xb294; &#xc5ec;&#xc131;&#xc758; &#xb300;&#xc870;&#xc5d0; &#xac00;&#xae5d;&#xb2e4;. &lt;VAMPYR&gt;&#xc5d0;&#xc11c; &#xd761;&#xd608;&#xadc0;&#xb85c;&#xc11c;&#xc758; &#xc5ec;&#xc131;&#xc740;, &#xd76c;&#xc0dd;&#xc790;&#xc778; &#xb0a8;&#xc131;&#xc774;&#xb098; &#xbcf4;&#xace0; &#xc788;&#xb294; &#xc790;&#xc5d0;&#xac8c; &#xb2ec;&#xb824;&#xb4dc;&#xb294; &#xb4ef;&#xd558;&#xace0; &#xbcf4;&#xb294; &#xc790;&#xb97c; &#xc0ac;&#xb85c;&#xc7a1;&#xc744; &#xb4ef;&#xd55c; &#xb208;&#xae38;&#xb85c; &#xc751;&#xc2dc;&#xd55c;&#xb2e4;. &#xc5ec;&#xc131;&#xc758; &#x2018;&#xb9e4;&#xb825;&#x2019;&#xc5d0; &#xbe60;&#xc9c4; &#xb0a8;&#xc131;(&#xd654;&#xac00;)&#xc740; &#xc218;&#xb3d9;&#xc801;&#xc774;&#xba70; &#xbb34;&#xb825;&#xd55c; &#xcc44;, &#xb2e4;&#xb9cc; &#xacf5;&#xd3ec;&#xb97c; &#xc774;&#xb8e8;&#xace0; &#xc788;&#xc744; &#xbfd0;&#xc774;&#xb2e4;.<sup id=\"cite_ref-.EB.85.B8.EB.A7.88.EB.B6.80.EB.A5.B4.EB.93.9C01_1-4\" class=\"reference\">[1]</sup></p><p>&#xadf8;&#xb7ec;&#xb098; &#xd0a4;&#xb974;&#xd788;&#xb108;&#xb098; &#xbc18; &#xb3d9;&#xac90;&#xc758; &#xb204;&#xb4dc;&#xc5d0;&#xc11c;&#xb294; &#xd654;&#xac00;&#xac00; &#xc774; &#xad00;&#xacc4;&#xb97c; &#xc5ed;&#xc804;&#xc2dc;&#xd0a8;&#xb2e4;. &#xc721;&#xccb4;&#xb85c; &#xd658;&#xc6d0;&#xb41c; &#xc5ec;&#xc131;&#xc740; &#xb0a8;&#xc131; &#xc55e;&#xc5d0;&#xc11c; &#xd798;&#xc5c6;&#xc774; &#xb298;&#xc5b4;&#xc838; &#xb204;&#xc6cc;&#xc788;&#xc73c;&#xba70;, &#xc5ec;&#xc131;&#xc758; &#xbab8;&#xc740; &#xb0a8;&#xc131;&#xc758; &#xc131;&#xc801; &#xc758;&#xc9c0;&#xac00; &#xba85;&#xd558;&#xb294; &#xb300;&#xb85c; &#xbe44;&#xd2c0;&#xc5b4;&#xc838; &#xc788;&#xb2